{
  "$schema": "https://turborepo.dev/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": ["tsconfig.json", "./**/*.ts", "!./cli/**/*.ts"],
      "outputs": ["./**/*.js", "./**/*.d.ts", "./**/*.d.ts.map", "!./cli/**/*.js"],
      "dependsOn": ["^build", "build:cli"]
    },
    "build:cli": {
      "inputs": ["./cli/**/*.ts"],
      "outputs": ["./cli/bin.js"]
    }
  }
}
