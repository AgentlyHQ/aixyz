# OpenAI API Key for the AI agent
OPENAI_API_KEY=your_openai_api_key_here

# Port for the A2A server (optional, defaults to 3000)
PORT=3000

# Agent URL for the agent card (optional, defaults to http://localhost:3000/)
AGENT_URL=http://localhost:3000/

# x402 Payment Configuration
# Address to receive payments (Base Sepolia)
X402_PAYMENT_ADDRESS=0x0000000000000000000000000000000000000000

# x402 Payment Network (defaults to eip155:84532 for Base Sepolia)
X402_NETWORK=eip155:84532

# x402 Payment Amount in USDC (defaults to $0.000001)
X402_AMOUNT=$0.000001

# x402 Facilitator URL (defaults to https://www.x402.org/facilitator)
X402_FACILITATOR_URL=https://www.x402.org/facilitator
