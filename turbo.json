{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "env": ["*"]
    },
    "build": {
      "inputs": ["tsconfig.json", "src", "pages", "next.config.mjs", "theme.config.tsx"],
      "outputs": ["dist", ".vercel/output", ".next"],
      "dependsOn": ["^build"],
      "env": ["*"]
    },
    "test": {
      "inputs": ["tsconfig.json", "src"],
      "dependsOn": ["^test"]
    },
    "lint": {
      "outputs": [],
      "outputLogs": "errors-only"
    }
  }
}
